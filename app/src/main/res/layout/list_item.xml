<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/book_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Gone With The Wind by Margaret Mitchell" />

    <TextView
        android:id="@+id/book_price_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="28$" />

    <TextView
        android:id="@+id/book_quantity_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Quantity" />

    <TextView
        android:id="@+id/book_supplier_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Supplier" />

    <TextView
        android:id="@+id/book_order_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Order" />

</LinearLayout>